#!/usr/bin/env bash
# For sheckcheck â†‘ only.

# Load spectrum.

autoload -Uz colors;
colors; typeset -Ag fg bg;

for _color in {000..255}; do
    fg[${_color}]="%{[38;5;${_color}m%}";
    bg[${_color}]="%{[48;5;${_color}m%}";
done; unset _color;

# Spectrum display function.

function spectrum() {
  local _code; # Initialize for routine below.
  local test='This is a color test :: ï€• ï¼ ï‚› ï…± ï‡“ ï§ ï¨ ï¦ ïƒ… ï© ï„¦ ï†š ï‡¦ ï‡ ';

  for _code in {000..255}; do
    print -P -- "${_code}: %{${fg[${_code}]}%}${test}%{${reset_color}%}"
  done; unset _code;
};

# Is vagrant?

function is_vagrant() {
  if id -u vagrant &>/dev/null; then
    return 0;
  else # 1 = false.
    return 1;
  fi;
};
