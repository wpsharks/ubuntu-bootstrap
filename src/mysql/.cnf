; See: <http://www.prelovac.com/vladimir/wordpress-optimization-guide>
; See: <https://dev.mysql.com/doc/refman/5.5/en/server-system-variables.html>
; See: <http://www.percona.com/files/presentations/MySQL_Query_Cache.pdf>
; See: <https://rtcamp.com/tutorials/mysql/query-cache/>
; See: <https://tools.percona.com/wizard>

; The following is based on recommendations from Percona.

[client]

# SSL CONFIG #
ssl_key                        = /etc/bootstrap/ssl/client-private-key.pem
ssl_cert                       = /etc/bootstrap/ssl/client-crt.pem
ssl_ca                         = /etc/bootstrap/ssl/server-ca-crt.pem
ssl_cipher                     = CAMELLIA256-SHA

# GENERAL #
default_character_set          = utf8mb4

[mysqld]

# SSL CONFIG #
ssl_key                        = /etc/bootstrap/ssl/server-private-key.pem
ssl_cert                       = /etc/bootstrap/ssl/server-crt.pem
ssl_ca                         = /etc/bootstrap/ssl/server-ca-crt.pem
ssl_cipher                     = CAMELLIA256-SHA

# GENERAL #
bind_address                   = 0.0.0.0
default_storage_engine         = InnoDB
character_set_server           = utf8mb4
collation_server               = utf8mb4_unicode_ci

# MyISAM #
skip_external_locking
key_buffer_size                = 32M
myisam_recover_options         = FORCE,BACKUP

# SAFETY #
skip_name_resolve
sysdate_is_now                 = 1
max_allowed_packet             = 16M
max_connect_errors             = 1000000
sql_mode                       = STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_AUTO_VALUE_ON_ZERO,NO_ENGINE_SUBSTITUTION,NO_ZERO_DATE,NO_ZERO_IN_DATE,ONLY_FULL_GROUP_BY
innodb                         = FORCE
innodb_strict_mode             = 1

# CACHES AND LIMITS #
tmp_table_size                 = 32M
max_heap_table_size            = 32M
query_cache_type               = 0
query_cache_size               = 0
max_connections                = 500
thread_stack                   = 256K
thread_cache_size              = 50
open_files_limit               = 65535
table_definition_cache         = 4096
table_open_cache               = 4096

# INNODB #
innodb_flush_method            = O_DIRECT
innodb_log_files_in_group      = 2
innodb_log_file_size           = 128M
innodb_flush_log_at_trx_commit = 1
innodb_file_per_table          = 1

# INNODB BUFFER POOL (MEMORY CACHE) #
; On a dedicated MySQL server, this should be roughly 50-75% of available of RAM.
;   This is altered dynamically by the bootstrap/installer.
;   See: `/bootstrap/src/bin/set-resource-limits`.
innodb_buffer_pool_size        = 64M

# LOGGING #
long_query_time                = 2
slow_query_log                 = 1
log_queries_not_using_indexes  = 1
slow_query_log_file            = /var/log/mysql/slow.log

# FAIL2BAN NEEDS THIS #
log_warnings                   = 2

# BINARY LOGGING #
sync_binlog                    = 1
expire_logs_days               = 14
binlog_format                  = MIXED
log_bin                        = /var/log/mysql/bin.log

# FULLTEXT SEARCHES #
ft_min_word_len                = 3
